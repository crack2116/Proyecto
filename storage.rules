rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Reglas para imágenes de perfil
    match /profiles/{userId}/{fileName} {
      // Permitir lectura y escritura a usuarios autenticados (temporalmente más permisivo)
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId
                   && request.resource.size < 5 * 1024 * 1024 // Máx 5MB
                   && request.resource.contentType.matches('image/.*');
    }
    
    // Permitir lectura autenticada en general (para debugging)
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}

